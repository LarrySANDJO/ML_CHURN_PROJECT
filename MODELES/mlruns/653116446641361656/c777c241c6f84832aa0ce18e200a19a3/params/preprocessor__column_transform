ColumnTransformer(transformers=[('num',
                                 Pipeline(steps=[('imputer',
                                                  SimpleImputer(strategy='median')),
                                                 ('scaler', MinMaxScaler())]),
                                 ['Avg Monthly GB Download', 'Tenure in Months',
                                  'Number of Referrals', 'Number of Dependents',
                                  'Age', 'New_monthly_charge', 'Ratio_refund',
                                  'Extra_charges_ratio',
                                  'total_extra_services']),
                                ('onehot',
                                 OneHotEncoder(handle_unknown='ignore'),
                                 ['Internet Service', 'Phone Service',
                                  'Multiple Lines', 'Married']),
                                ('ordinal',
                                 OrdinalEncoder(categories=[['Month-to-Month',
                                                             'One Year',
                                                             'Two Year']]),
                                 ['Contract'])])